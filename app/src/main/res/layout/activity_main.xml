<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff3c3f41">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="My Android Apps!"
        android:textColor="#ffe3e0d8"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="switchToastText" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/buttonSpotifyStreamer"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="ButtonOnClick"
        android:background="#ffa3c901" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:id="@+id/buttonScoresApp"
        android:layout_marginTop="102dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="ButtonOnClick"
        android:background="#ffceff24" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/buttonLibraryApp"
        android:layout_marginTop="168dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="ButtonOnClick"
        android:background="#fff3ff32" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:id="@+id/buttonBuildItBigger"
        android:layout_marginTop="234dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="ButtonOnClick"
        android:background="#ffffd134" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="XYZ App"
        android:id="@+id/buttonXYZApp"
        android:layout_marginTop="300dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="ButtonOnClick"
        android:background="#ffff6121" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Cappstone App"
        android:id="@+id/buttonCappstoneApp"
        android:layout_marginTop="366dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="ButtonOnClick"
        android:background="#ffff0b0b" />
</RelativeLayout>
